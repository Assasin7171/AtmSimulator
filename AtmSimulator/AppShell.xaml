<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="AtmSimulator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AtmSimulator.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Atm simulator">

    <ShellContent
        Title="Home view"
        ContentTemplate="{DataTemplate views:MainView}" />
    <ShellContent
        Title="Admin login view"
        ContentTemplate="{DataTemplate views:AdminLoginView}"/>
    <ShellContent
        Title="Admin panel view"
        IsVisible="True"
        ContentTemplate="{DataTemplate views:AdminView}"/>

</Shell>